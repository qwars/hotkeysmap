
._navsidebar
	background-color: var(--c_bg_secondary)
	transition: width .3s
	overflow: hidden
	box-sizing: border-box
	overflow: hidden auto
	user-select: none
	& > *
		margin: 1.25rem 1rem 1.25rem 1.25rem
		list-style: none
		padding: 0px
		box-sizing: border-box
		font-size: .875rem
		user-select: none
		[href]
			display: block
			line-height: 2.5rem
			white-space: nowrap
			text-overflow: ellipsis
			overflow: hidden
			list-style: none
			padding: 0 1.25rem
			user-select: none
			&:hover
				background-color: var(--c_bg_disabled)
				border-radius: .5rem
			
